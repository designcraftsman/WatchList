@model IEnumerable<WatchList.Models.ModelViewFilm>

<h1>My Film List</h1>

<!-- Button to Add a New Film -->
<div class="mb-3">
    <a asp-action="Create" asp-route-id="">Add</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
            <tr>
                <td>@film.Title</td>
                <td>@film.Year</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@film.IdFilm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@film.IdFilm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@film.IdFilm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Remove a film from the list
            $(document).on('click', '.remove-film', function () {
                const idFilm = $(this).data('id'); // Retrieve the film ID

                $.post('/Films/Delete', { idFilm: idFilm })
                    .done(function (response) {
                        alert(response); // Display success message
                        location.reload(); // Reload page to update the list
                    })
                    .fail(function (xhr) {
                        alert(`Failed to remove film: ${xhr.responseText}`); // Show error message
                    });
            });
        });
    </script>
}
